<resources>

    <style name="Theme.XCartAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="switchStyle">@style/Widget.Holo.Light.CompoundButton.Switch</item>
        <item name="android:actionBarStyle">@style/ActionBar.XCartAppTheme</item>
    </style>

    <style name="ActionBar.XCartAppTheme" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/ActionBarTextStyle</item>
    </style>

    <style name="Theme.XCartAppTheme.Dashboard" parent="Theme.XCartAppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Dashboard.XCartAppTheme</item>
    </style>

    <style name="ActionBar.Dashboard.XCartAppTheme" parent="ActionBar.XCartAppTheme">
        <item name="android:background">@drawable/gray_title</item>
    </style>

    <style name="Theme.XCartAppTheme.Orders" parent="Theme.XCartAppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Orders.XCartAppTheme</item>
    </style>

    <style name="ActionBar.Orders.XCartAppTheme" parent="ActionBar.XCartAppTheme">
        <item name="android:background">@drawable/orange_title</item>
    </style>

    <style name="Theme.XCartAppTheme.Users" parent="Theme.XCartAppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Users.XCartAppTheme</item>
    </style>

    <style name="ActionBar.Users.XCartAppTheme" parent="ActionBar.XCartAppTheme">
        <item name="android:background">@drawable/blue_title</item>
    </style>

    <style name="Theme.XCartAppTheme.Reviews" parent="Theme.XCartAppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Reviews.XCartAppTheme</item>
    </style>

    <style name="ActionBar.Reviews.XCartAppTheme" parent="ActionBar.XCartAppTheme">
        <item name="android:background">@drawable/light_orange_title</item>
    </style>

    <style name="Theme.XCartAppTheme.Products" parent="Theme.XCartAppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Products.XCartAppTheme</item>
    </style>

    <style name="ActionBar.Products.XCartAppTheme" parent="ActionBar.XCartAppTheme">
        <item name="android:background">@drawable/light_gray_title</item>
    </style>

    <style name="Theme.XCartAppTheme.Settings" parent="Theme.XCartAppTheme"/>

</resources>