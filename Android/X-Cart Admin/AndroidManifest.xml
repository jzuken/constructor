<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adminshop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".StartActivity"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Unlock"
            android:launchMode="singleTop"
            android:noHistory="true" />
        <activity
            android:name=".Authorization"
            android:launchMode="singleTop"
            android:noHistory="true" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".Settings" />
        <activity
            android:name=".Products"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Dashboard"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ProductAdder"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Users"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Reviews"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".Discounts"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".DiscountEditor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".DiscountAdder"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".FullMessage" />
        <activity
            android:name=".UserOrders"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".OrderProducts"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>