<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item 
		android:state_focused="false"
		android:state_pressed="false"
		android:state_selected="true" >
    
    	<shape android:shape="rectangle" > 
    	    
    	    <corners 
				android:bottomRightRadius="7dp"
				android:topLeftRadius="7dp" />
        	
        	<gradient
				android:angle="270"
				android:endColor="#ff2d3339"
				android:startColor="#ff5a6571"
				android:type="linear" />
        	
        	<stroke 
        	    android:width="0.5dp" 
    			android:color="@color/selected_tab_stroke_color" />
    	</shape>
    </item>
    <item>
    	<shape android:shape="rectangle" > 
    	    
    	    <corners 
				android:bottomRightRadius="7dp"
				android:topLeftRadius="7dp" />
        	
        	<gradient
				android:angle="270"
				android:endColor="#ff5e8fb7"
				android:startColor="#ff6499c5"
				android:type="linear" />
    	</shape>
    </item>

</selector>